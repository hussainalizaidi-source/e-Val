<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.e_val.e_Val.client.controllers.LoginController">
    <Text layoutX="250" layoutY="100" text="e-Val Login">
        <font>
            <Font size="20" />
        </font>
    </Text>
    <TextField fx:id="emailField" layoutX="200" layoutY="150" promptText="Email" />
    <PasswordField fx:id="passwordField" layoutX="200" layoutY="200" promptText="Password" />
    <Button fx:id="loginButton" layoutX="250" layoutY="250" text="Login" onAction="#handleLogin" />
</AnchorPane>